Option Explicit

Private Sub Worksheet_Activate() '2024-09-29 @ 07:23

    Dim startTime As Double: startTime = Timer: Call modDev_Utils.EnregistrerLogApplication("wshTEC_Evaluation:Worksheet_Activate", vbNullString, 0)
    
    If gFromMenu = False Then
        Exit Sub
    End If

    Application.ScreenUpdating = False
    Application.EnableEvents = False
    
    Dim ws As Worksheet: Set ws = wshTEC_Evaluation
    
    'Import transactions from MASTER file
    Call modImport.ImporterClients
    
    'Set the zoom factor to 100% when this worksheet is activated
    ActiveWindow.Zoom = 100

    Me.Application.Calculation = xlCalculationAutomatic

    'Révéler/masquer automatiquement les colonnes A et B
    Dim colsHidden As Boolean
    colsHidden = ws.Columns("A:B").Hidden
    If colsHidden = True Then
        ws.Unprotect
        ws.Range("A:B").EntireColumn.Hidden = False
    Else
        ws.Unprotect
    End If
    
    Call modImport.ImporterGLTransactions
    
    Call modDev_Utils.DeterminerOrdreDeTabulation(ws)
    
    Call ViderFeuilleEvaluationTEC '2025-06-28 @ 11:13
    
    With ws
        Application.EnableEvents = False
        .Range("A:B").EntireColumn.Hidden = True
        .Range("L3").Value = vbNullString
        gPreviousCellAddress = .Range("L3").Address
        .Range("L3").Select
        Application.EnableEvents = True
    End With

    ws.Visible = xlSheetVisible
    
    Application.ScreenUpdating = True
    
    gFromMenu = True
    
    'Libérer la mémoire
    Set ws = Nothing
    
    Call modDev_Utils.EnregistrerLogApplication("wshTEC_Evaluation:Worksheet_Activate", vbNullString, startTime)

End Sub

Private Sub Worksheet_SelectionChange(ByVal Target As Range)

    Dim startTime As Double: startTime = Timer: Call modDev_Utils.EnregistrerLogApplication("wshTEC_Evaluation:Worksheet_SelectionChange", vbNullString, 0)
    
    If gPreviousCellAddress <> vbNullString Then
        Range(gPreviousCellAddress).Interior.Color = gCOULEUR_BASE_TEC
    End If
    
    'Is date been selected ?
    If Not Intersect(Target, Me.Range("L3")) Is Nothing Then
        Target.Interior.Color = gCOULEUR_SAISIE
    End If
    
    Call modDev_Utils.EnregistrerLogApplication("wshTEC_Evaluation:Worksheet_SelectionChange", vbNullString, startTime)
    
End Sub

Private Sub Worksheet_Change(ByVal Target As Range)

    Dim startTime As Double: startTime = Timer: Call modDev_Utils.EnregistrerLogApplication("wshTEC_Evaluation:Worksheet_Change", Target.Address, 0)
    
    Dim fullDate As Variant
    
    'CutOffDate has changed
    If Not Intersect(Target, Range("L3")) Is Nothing Then
        Application.EnableEvents = False
        fullDate = Fn_Complete_Date(Target.text, 99, 0)
        If fullDate <> "Invalid Date" Then
            Target.Value = Format$(fullDate, wsdADMIN.Range("B1").Value)
        Else
            Call modDataValidation.AfficherMessageDateInvalide("wshTEC_Evaluation_75")
            Application.EnableEvents = False
            Target.ClearContents
            Application.EnableEvents = True
            Application.Goto Range(Target.Address)
            Exit Sub
        End If
       
        'Future date ?
        If CDate(Range("L3").Value) > Format$(Date, "dd/mm/yyyy") Then
            If MsgBox("Il n'est pas permis d'utiliser une date dans le futur !", vbYesNo + vbCritical, "Utilisation d'une date FUTURE") = vbNo Then
                Application.EnableEvents = False
                Target.ClearContents
                Application.EnableEvents = True
                Application.Goto Range(Target.Address)
            End If
        Else
            Call EvaluerValeurTEC(Target.Value)
        End If
        GoTo exitSub
    End If

exitSub:

    Application.EnableEvents = True
    
    Call modDev_Utils.EnregistrerLogApplication("wshTEC_Evaluation:Worksheet_Change", vbNullString, startTime)
  
End Sub