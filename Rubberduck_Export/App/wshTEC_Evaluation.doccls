Option Explicit

Public previousCellAddress As Variant

Private Sub Worksheet_Activate() '2024-09-29 @ 07:23

    Dim startTime As Double: startTime = Timer: Call Log_Record("wshTEC_Evaluation:Worksheet_Activate", 0)
    
    If fromMenu = False Then
        Debug.Print "wshTEC_Evaluation_Worksheet_Activate - Je ne viens pas du menu"
        Exit Sub
    End If

    Application.ScreenUpdating = False
    Application.EnableEvents = False
    
    Dim ws As Worksheet: Set ws = wshTEC_Evaluation
    
    'Import transactions from MASTER file
    Call Client_List_Import_All
    Call TEC_Import_All
    
    'Set the zoom factor to 95% when this worksheet is activated
    ActiveWindow.Zoom = 95

    Me.Application.Calculation = xlCalculationAutomatic

    'Révéler/masquer automatiquement les colonnes A et B
    Dim colsHidden As Boolean
    colsHidden = ws.columns("A:B").Hidden
    If colsHidden = True Then
        ws.Unprotect
        ws.Range("A:B").EntireColumn.Hidden = False
    Else
        ws.Unprotect
    End If
    
    Call SetTabOrder(ws)
    
    With ws
        .Range("A:B").EntireColumn.Hidden = True
        .Range("D6:K15").Clear
        .Protect UserInterfaceOnly:=True
        .EnableSelection = xlUnlockedCells
        Application.EnableEvents = False
        .Range("K3").value = ""
        Application.EnableEvents = True
        previousCellAddress = .Range("K3").Address
    End With

    'Désactive les événements pour éviter tout problème lors de la mise à jour
    Application.EnableEvents = False
    
    'Reactive les événements
    Application.EnableEvents = True
    
    ws.Visible = xlSheetVisible
    
    fromMenu = True
    
    'Clean up memory - 2024-07-11 @ 10:14
    Set ws = Nothing
    
    Call Log_Record("wshTEC_Evaluation:Worksheet_Activate", startTime)

End Sub

Private Sub Worksheet_SelectionChange(ByVal Target As Range)

    Dim startTime As Double: startTime = Timer: Call Log_Record("wshTEC_Evaluation:Worksheet_SelectionChange", 0)
    
    If previousCellAddress <> "" Then
        Range(previousCellAddress).Interior.Color = BASIC_COLOR
    End If
    
    'Is date been selected ?
    If Not Intersect(Target, wshTEC_Evaluation.Range("K3")) Is Nothing Then
        Target.Interior.Color = HIGHLIGHT_COLOR
    End If
    
    Call Log_Record("wshTEC_Evaluation:Worksheet_SelectionChange", startTime)
    
End Sub

Private Sub Worksheet_Change(ByVal Target As Range)

    Dim startTime As Double: startTime = Timer: Call Log_Record("wshTEC_Evaluation:Worksheet_Change", 0)
    
    Dim fullDate As Variant
    
    'CutOffDate has changed
    If Not Intersect(Target, Range("K3")) Is Nothing Then
        Application.EnableEvents = False
        fullDate = Fn_Complete_Date(CStr(Target.Text))
        If fullDate <> "Invalid Date" Then
            Target.value = fullDate
        Else
            Call MsgBoxInvalidDate("wshTEC_Evaluation_75")
            Application.EnableEvents = False
            Target.ClearContents
            Application.EnableEvents = True
            Application.Goto Range(Target.Address)
        End If
       
        'Future date ?
        If CDate(Range("K3").value) > Format$(Now(), "dd/mm/yyyy") Then
            If MsgBox("Il n'est pas permis d'utiliser une date dans le futur !", vbYesNo + vbCritical, "Utilisation d'une date FUTURE") = vbNo Then
                Application.EnableEvents = False
                Target.ClearContents
                Application.EnableEvents = True
                Application.Goto Range(Target.Address)
            End If
        Else
            Call TEC_Evaluation_Procedure(Target.value)
        End If
        GoTo ExitSub
    End If

ExitSub:

    Application.EnableEvents = True
    
    Call Log_Record("wshTEC_Evaluation:Worksheet_Change", startTime)
  
End Sub

Sub Back_To_TEC_Menu()

    wshTEC_Evaluation.Visible = xlSheetHidden
    
    wshMenuTEC.Activate
    wshMenuTEC.Range("A1").Select

End Sub